<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_dark</item>
        <item name="colorPrimaryDark">@color/statusbar_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@color/background_dark</item>
        <item name="textcolor">@color/white</item>
        <item name="cardbackgroundcolor">@color/dark_gray</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowAnimationStyle">@style/WidowAnimationTransation</item>
        <item name="dialogepicker_accentcolor">@color/colorAccent</item>

    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/background_light</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="backgroundcolor">@color/white</item>
        <item name="textcolor">@color/background_dark</item>>
        <item name="cardbackgroundcolor">@color/light_gray</item>
         <item name="android:windowAnimationStyle">@style/WidowAnimationTransation</item>
        <item name="dialogepicker_accentcolor">@android:color/holo_red_light</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/holo_red_dark</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light.NoActionBar" parent="AppTheme.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BottomSheet.Dark" parent="Theme.Design.BottomSheetDialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_dark</item>
        <item name="colorPrimaryDark">@color/statusbar_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheet.light" parent="Theme.Design.BottomSheetDialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_dark</item>
        <item name="colorPrimaryDark">@color/statusbar_dark</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
    </style>

    <style name="AppTheme.PopupOverlays" parent="AlertDialog.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">true</item>
    </style>



    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- navigation icon color -->
        <item name="colorControlNormal">?attr/textcolor</item>
        <item name="colorPrimary">?attr/backgroundcolor</item>

      </style>



    <style name="WidowAnimationTransation" parent="Theme.AppCompat.Light">

         <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">?attr/backgroundcolor</item>
         <item name="colorAccent">?attr/dialogepicker_accentcolor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
